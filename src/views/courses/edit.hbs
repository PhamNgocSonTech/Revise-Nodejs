<div class="max-w-md mx-auto p-8 bg-white rounded-md shadow-md">
  <h2 class="text-2xl font-semibold mb-6">Edit Course</h2>

  <form action="/courses/{{course._id}}?_method=PUT" method="POST">
    <div class="mb-4">
      <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name Course</label>
      <input type="text" value="{{course.name}}" id="name" name="name" placeholder="React Native" 
        class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
    </div>

    <div class="mb-4">
      <label for="desc" class="block text-gray-700 text-sm font-bold mb-2">Descriptions</label>
      <textarea id="desc" name="desc" 
        class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">{{course.desc}}</textarea>
    </div>

    <div class="mb-4">
      <label for="img" class="block text-gray-700 text-sm font-bold mb-2">Image Url</label>
      <input type="text" value="{{course.img}}" id="img" name="img" readonly
        class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
    </div>

     <div class="mb-4">
      <label for="videoId" class="block text-gray-700 text-sm font-bold mb-2">Video ID</label>
      <input type="text" value="{{course.videoId}}" id="videoId" name="videoId" 
        class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
    </div>

      <div class="mb-4">
      <label for="level" class="block text-gray-700 text-sm font-bold mb-2">Level</label>
      <input type="text" value="{{course.level}}" id="level" name="level" 
        class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
    </div>
    
    <button type="submit"
      class="bg-violet-700 text-white px-4 py-2 rounded-md hover:bg-violet-500 focus:outline-none focus:shadow-outline-blue">
      Save Course
    </button>
